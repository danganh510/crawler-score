        if ($('#txtMetaImage').val() == '') {
            $('#txtIcon').on('input', function () {
                var str = $(this).val();
                $('#txtMetaImage').val(str);

            });
        }

        function call(id, tableName, langSuccess, locationSuccess, statusInsertEn = false, statusInsertLang = false) {
            $.ajax({
                url: "<?php echo $this->url->get("/insert-data-translate")?>",
                cache: false,
                type: "POST",
                dataType: "JSON",
                data: {
                    'id': id,
                    'table': tableName,
                    'langSuccess': langSuccess,
                    'locationSuccess': locationSuccess,
                    'statusInsertEn': statusInsertEn,
                    'statusInsertLang': statusInsertLang
                },
                success: function (data) {
                    if (data.status === 'processing') {
                        $('#percent').html(data.percent + '%');
                        call(data.id, data.table, data.langSuccess, data.locationSuccess, data.statusInsertEn, data.statusInsertLang);
                    }  else if (data.status === 'errorAPI') {
                        $('#loading').hide();
                        $('#alertInsertTranslateError').show();
                        $('#alertInsertTranslateError').html(data.message);
                    } else {
                        $('#insertMultiTranslate').hide();
                        $('#loading').hide();
                        $('#alertInsertTranslate').show();
                        $('input[name=radActive]:nth-child(1)').attr('checked', true);
                    }
                }
            });
        }
        $("#insertMultiTranslate").on('click', function () {
            $('#alertInsertTranslateError').hide();
            $('#alertInsertTranslate').hide();
            $('#loading').show();
            var id = <?= $formData['article_id'] ?>;
            var tableName = 'forexcec_article';
            var langSuccess = [];
            var locationSuccess = [];
            call(id, tableName, langSuccess,locationSuccess);
            $("#insertMultiTranslate").prop('disabled', true);
        });

    });

</script>
