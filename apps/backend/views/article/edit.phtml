<script>
    $(document).ready(function () {
        $('form[name=article-form]').submit(function (event) {
            var valid = true;
            if ($('select[name=slcType]').val() == 0) {
                $('.msg-type').text('Type field is required.');
                $('#slcType').addClass("border-red");
                valid = false;
